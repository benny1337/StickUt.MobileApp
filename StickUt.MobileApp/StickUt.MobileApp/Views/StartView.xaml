<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StickUt.MobileApp.Views.StartView"
             Title="Stickut"
  
    >

  <ContentPage.ToolbarItems>
    <ToolbarItem Command="{Binding AddWorkout}" Text="Ny" />
  </ContentPage.ToolbarItems>
  
  <StackLayout>
    <ListView ItemsSource="{Binding Workouts}" HasUnevenRows="true" SelectedItem="{Binding SelectedWorkout}">
      <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <ViewCell.View>
            <StackLayout>
              <Label Text="{Binding CreatedOn}" />
              <Label Text="{Binding WorkoutStatus}" />
            </StackLayout>
          </ViewCell.View>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>